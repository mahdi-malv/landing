---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Mahdi Malvandi - Android Software Developer Portfolio" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    color: #374151;
    min-height: 100vh;
    scroll-behavior: smooth;
  }
  
  body {
    margin: 0;
    padding: 0;
    line-height: 1.7;
    min-height: 100vh;
    font-weight: 400;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  * {
    box-sizing: border-box;
  }
  
  /* Improved typography */
  h1, h2, h3, h4, h5, h6 {
    font-weight: 600;
    line-height: 1.3;
  }
  
  /* Better link styling */
  a {
    color: #3b82f6;
    transition: color 0.2s ease;
  }
  
  a:hover {
    color: #1d4ed8;
  }
  
  /* Focus states for accessibility */
  a:focus,
  button:focus {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
  
  /* Hero section with background image */
  .hero-section {
    background: url('/images/bg.jpg') center center/cover no-repeat;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }
  
  .hero-content {
    max-width: 900px;
    padding: 2rem 1rem;
    text-align: center;
    color: white;
  }
  
  /* Projects section with black background */
  .projects-section {
    background: black;
    min-height: 100vh;
    position: relative;
    z-index: 1;
  }
  
  .projects-content {
    max-width: 900px;
    margin: 0 auto;
    padding: 4rem 1rem;
    color: white;
  }
  
  /* Gradient separator */
  .gradient-separator {
    height: 100px;
    background: linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.8), black);
    margin-top: -100px;
    position: relative;
    z-index: 2;
  }
  
  @media (max-width: 768px) {
    .hero-content,
    .projects-content {
      padding: 1.5rem;
    }
  }
</style>
